<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#303f9f"
    android:padding="16dp">


    <!-- left layout -->
    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingRight="4dp">

        <!-- sort first -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sort_first"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/top_buttons_top_margins"
            android:stateListAnimator="@animator/lift_on_touch"
            android:clickable="true"
            card_view:cardBackgroundColor="#5c6bc0"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/button_text_size"
                    android:text="@string/button_first"
                    android:textColor="#ffffff"
                    android:id="@+id/text_first"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- sort random -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sort_random"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:stateListAnimator="@animator/lift_on_touch"
            android:clickable="true"
            card_view:cardBackgroundColor="#5c6bc0"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/button_text_size"
                    android:text="@string/button_random"
                    android:textColor="#ffffff"
                    android:id="@+id/text_random"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- clear list -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/clear_list"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:stateListAnimator="@animator/lift_on_touch"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/button_red"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/button_text_size"
                    android:text="@string/button_clear"
                    android:textColor="#ffffff"
                    android:id="@+id/text_clear"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- save -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/save"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/save_button_top_margin"
            android:stateListAnimator="@animator/lift_on_touch"
            android:clickable="true"
            card_view:cardBackgroundColor="#5c6bc0"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/button_text_size"
                    android:text="@string/button_save"
                    android:textColor="#ffffff"
                    android:id="@+id/text_save"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>


    <!-- right layout -->
    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="4dp">

        <!-- sort last -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sort_last"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/top_buttons_top_margins"
            android:stateListAnimator="@animator/lift_on_touch"
            android:clickable="true"
            card_view:cardBackgroundColor="#5c6bc0"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/button_text_size"
                    android:text="@string/button_last"
                    android:textColor="#ffffff"
                    android:id="@+id/text_last"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- sort flip -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sort_flip"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:stateListAnimator="@animator/lift_on_touch"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            card_view:cardBackgroundColor="#5c6bc0"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardCornerRadius="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/button_text_size"
                    android:text="@string/button_flip"
                    android:textColor="#ffffff"
                    android:id="@+id/text_flip"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- add group -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/add_group"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/load_group_button_top_margin"
            android:stateListAnimator="@animator/lift_on_touch"
            android:clickable="true"
            card_view:cardBackgroundColor="#5c6bc0"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardCornerRadius="6dp"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/button_text_size"
                    android:text="@string/button_add_group"
                    android:textColor="#ffffff"
                    android:id="@+id/text_add_group"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>